
<div class="col-sm-2">
<!-- Card -->
<div
	class="card">

	<!-- Card image -->
	<img
	class="card-img-top" src="{{picture}}" alt="{{playlistname}}">

	<!-- Card content -->
	<div
		class="card-body">

		<!-- Title -->
		<h4 class="card-title">
			<a>{{playlistname}}</a>
