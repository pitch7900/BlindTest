<!-- Modal dialog for History-->
<div class="modal fade checkimgloading" id="AddPlaylistModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add playlist</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body mx-auto">
               <h4>Add a custom playlist from Deezer</h4>
               <p>Simply paste playlist URL below</p>
                <div class="input-group flex-nowrap">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="CustomPlaylistLinkWrapping">URL</span>
                        </div>
                        <input id="CustomPlaylistLink"  type="url" class="form-control" placeholder="Playlist URL" aria-label="Playlist URL" aria-describedby="addon-wrapping">
                        
                    </div>
            </div>
            <div class="modal-footer">
                <button id="ButtonImportTo" class="btn btn-primary" type="button" onclick="AddCustomPlaylist();" data-bs-dismiss="modal">Import</button>
                <button type="button" class="btn btn-secondary btn-no" data-bs-dismiss="modal" >Close</button>
            </div>
        </div>
    </div>
</div>
