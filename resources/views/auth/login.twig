{% extends "main.twig" %}

{% block menu %}{% endblock %}

{% block interactivemenus %}{% endblock %}
{% block content %}
	<div class="container-fluid row">
		<div class="col-sm-8 mx-auto">
			<img src="/img/blindtest.png" class="title center">
			<h1 class="h3 mb-3 font-weight-normal center">Log in to Music Blindtest</h1>
			<form class="form-login"  method="post">


				<label for="email" class="sr-only">Email address</label>
				<input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>
				<br>
				<label for="password" class="sr-only">Password</label>
				<input type="password" id="password" name="password" class="form-control" placeholder="Password" autocomplete="Password" required>
				<br>
				<button class="btn btn-lg btn-primary btn-block g-recaptcha center " 
					type="submit"
					data-sitekey="{{recaptcha_api_key}}" 
					data-callback='onSubmitSecure' 
					data-action='submit'>Log in</button>
			</form>


		</div>
		<div class="col-sm-8 mx-auto center">
			<a href="{{ url_for('auth.forgotpassword')}}">
				Forgot password ?
			</a>
			<span>.</span>
			<a href="{{ url_for('auth.signin') }}">
				Create login
			</a>
		</div>

	</div>


{% endblock %}

{% block javascripts %}
	<script src="https://www.google.com/recaptcha/api.js?render={{recaptcha_api_key}}"></script>
	<script src="/js/recaptcha.js"></script>
	<script src="/js/home.js" type="text/javascript"></script>
{% endblock %}
