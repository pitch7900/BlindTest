{% extends "main.twig" %}

{% block menu %}{% endblock %}

{% block interactivemenus %}{% endblock %}
{% block content %}


<div class="container-fluid row">
		<div class="col-sm-8 mx-auto">
			<img src="/img/deezer.png" class="title">
			<h1 class="h3 mb-3 font-weight-normal center">Forgot your password</h1>
			<form class="form-login"  method="post">


				<label for="email" class="sr-only">Email address</label>
				<input type="email" name="email" id="email" class="form-control" placeholder="Email address" required autofocus>
				
				<button class="btn btn-lg btn-primary btn-block g-recaptcha" 
					type="submit"
					data-sitekey="{{recaptcha_api_key}}" 
					data-callback='onSubmitSecure' 
					data-action='submit'>
					Send a password reset link
					</button>


			</form>


		</div>
		<div class="col-sm-8 mx-auto">
			<a href="{{ url_for('auth.login')}}">
				Login
			</a>
			<span>.</span>
			<a href="{{ url_for('auth.signin') }}">
				Create login
			</a>
		</div>

	</div>

{% endblock %}

{% block javascripts %}
	<script src="https://www.google.com/recaptcha/api.js?render={{recaptcha_api_key}}"></script>
	<script src="/js/auth.js"></script>
	<script src="/js/recaptcha.js"></script>
	<script src="/js/home.js" type="text/javascript"></script>
{% endblock %}
