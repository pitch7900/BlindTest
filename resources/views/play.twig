{% extends "main.twig" %}


{% block headers %}

{% endblock %}


{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}

{% block interactivemenus %}
	{{include('interactivemenus/loadfile.twig')}}
{% endblock %}
{% block content %}
	<div id="BrowserError" class="row invisible">

		<div class="alert alert-danger" role="alert">
			<h4 class="alert-heading">Browser allert</h4>
			<p>Your browser doesn't allow automatic music play</p>
			<p class="mb-0">Please change the settings, it should be located near the address bar</p>
			<hr>

			{{ include('elements/BrowserErrorFF.twig') }}

		</div>
	</div>
	<div id="MainPage" class="container-fluid row" playlistid="{{playlistid}}">
		<div class="col-sm-3">
			<div id="score">
				<h1>
					<span id="currentscore">0</span>
					Points
				</h1>
			</div>
			<div
				id="answer" class="invisible">
				<!-- Card -->
				<div
					class="card">

					<!-- Card image -->
					<img
					id="trackimage" class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/images/43.jpg" alt="Card image cap">

					<!-- Card content -->
					<div
						class="card-body">

						<!-- Title -->
						<h4 class="card-title">
							<div id="artist" role="alert">
								<span id="artistname"></span>
							</div>
						</h4>
						<p>
							<div id="title" role="alert">
								<span id="titlename"></span>
							</div>
						</p>
						<h4>
							<span id="waitbeforenext"></span>s before next song
						</h4>
					</div>

				</div>
				<!-- Card -->


			</div>
		</div>

		<div class="col-sm-9">
			<h1>{{playlistname}}</h1>

			<div id="Play" class="row invisible">
				<button class="btn btn-primary" type="button" disabled>
					<span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
					<span class="sr-only">PLaying...</span>
					<i class="fas fa-music"></i>
				</button>
                <button id="audiocontroller" class="btn btn-primary" type="button" onclick="playpause();">
					<i class="far fa-pause-circle"></i>
                    <i class="far fa-play-circle invisible"></i>
				</button>

				<!-- Default form contact -->
				<form id="FormGuess" class="text-center border border-light p-5" action="#!">
					<input id="YourGuess" type="text" class="form-control mb-4" placeholder="">
					<!-- Send button -->
					<button id="btnsubmitanswer" class="btn btn-info btn-block" type="submit">Submit Answer</button>
				</form>
				<!-- Default form contact -->

			</div>
            <div id="Start" class="row">
                <button id="startbutton" class="btn btn-info btn-block" onclick="playtitle(currentindex);" disabled>Start the Game</button>
            </div>
		</div>
	</div>


</div>{% endblock %}{% block javascripts %}

<script src="/js/levenshtein.js" type="text/javascript"></script>
<script src="/js/play.js" type="text/javascript"></script>{% endblock %}
