{% extends "main.twig" %}


{% block headers %}
	<link rel="stylesheet" href="/css/circle.css" type="text/css">
{% endblock %}


{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}

{% block interactivemenus %}
{% endblock %}
{% block content %}

	<!-- Browser error pane on playing a title -->
	<div id="BrowserError" class="row invisible">

		<div class="alert alert-danger" role="alert">
			<h4 class="alert-heading">Whoop's someting went wrong</h4>
			<p>We were not able to play this music</p>
			<p class="mb-0">Please check your browser permissions or retry later</p>
			<button class="btn btn-primary" type="button" onclick="postcheckanswer("");">
				<i class="fas fa-forward"></i>
				Skip this song
			</button>

		</div>
	</div>
	<div id="MainPage" class="container-fluid row" playlistid="{{playlistid}}" gamesid="{{gamesid}}">

		<div
			class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
			<!-- Display answer pane -->
			<div id="answer" class="invisible">
				<h3>The answer was</h3>
				<div class="card mb-3">
					<div class="row no-gutters">
						<div
							class="col-md-4">
							<!-- Card image -->
							<a id="track_link" href="" target="_blank">
								<img id="trackimage" class="card-img hidden" src="" alt="albumimage">
							</a>
						</div>
						<div class="col-md-8">
							<div
								class="card-body">


								<!-- Card content -->
								<div class="card-body">


									<div id="artist" role="alert">
										<span id="artistname"></span> <img class="hidden" id="artistpoints" src="/img/golcoinanim.gif" width="30" height="30" alt="">
									</div>
									
									
									<div id="title" role="alert">
										<span id="titlename"></span> <img class="hidden" id="titlepoints" src="/img/golcoinanim.gif" width="30" height="30" alt="">
									</div>
									
									<div id="waitbeforenextcircle" class="c100 p0 hidden">
										<span id="waitbeforenext">5</span>
										<div class="slice">
											<div class="bar"></div>
											<div class="fill"></div>
										</div>
									</div>
								</div>


							</div>
						</div>
					</div>
					<!-- Card -->
				</div>


			</div>
			<!-- Actual play pane -->
			<div class="col-sm-12">
				<div id="Play" class="row invisible container-fluid">
					<div class="col-sm-12">
						<div class="progress">
							<div id="countdown" class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="30"></div>
						</div>
					</div>
					<div class="col-sm-3">
						<button id="audiocontroller" class="btn btn-primary" type="button" onclick="playpause();">
							<i id="audiocontroller_mute" class="fas fa-volume-mute"></i>
							<i id="audiocontroller_unmute" class="fas fa-volume-up invisible"></i>
						</button>
					</div>
					<div
						class="col-sm-9">
						<!-- Default form -->
						<form id="FormGuess" class="text-center" action="#!">
							<input
							id="YourGuess" type="text" class="form-control mb-4" placeholder="">
							<!-- Send button -->
							<button id="btnsubmitanswer" class="btn btn-info btn-block" type="submit">Submit Answer</button>
						</form>
						<!-- Default form -->
					</div>
				</div>
				<!-- Before the game start pane -->
				<div id="Start" class="row">
					<button id="startbutton" class="btn btn-info btn-block" onclick="playtitle();" disabled>Start the Game</button>
				</div>
			</div>
		</div>

		<div id="Playlistinfo" class="card mb-3">
			<div class="row no-gutters">
				<div class="col-sm-2 ">
					<a href="{{playlist_link}}" target="_blank"><img src="{{playlist_picture}}" class="card-img"></a>
				</div>
				<div class="col-sm-10">
					<div class="card-body">
						<h5 class="card-title">{{playlistname}}</h5>

						<p class="card-text">Highscore is :
							<span id="highscorenickname">{{highscores.nickname}}</span>
							with
							<span id="highscore">{{highscores.score}}</span>
							points</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}

	<script src="/js/play.js" type="text/javascript"></script>

{% endblock %}
