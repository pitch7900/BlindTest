{% extends "main.twig" %}
{% import "macros/home.twig" as macrohome %}
{% import "macros/macrosplaylist.twig" as macroplaylist %}
{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}

{% block interactivemenus %}{% endblock %}
{% block content %}

	<div id="main_page" class="container-fluid row">


		<div class="col-sm-12">
			<div id="playlists" class="row">
				<div
					class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
					<!-- Card -->
					<div
						class="card">

						<!-- Card image -->

						<center>
							<a href="#">
								<div class="card-img">
									<span style="font-size: 150px; color: lightgrey;">
										<i class="fas fa-plus-circle"></i>
									</span>
								</div>

							</a>
						</center>

						<!-- Card content -->
						<div
							class="card-body">
							<!-- Title -->
							<h4 class="card-title">
							<a href="#">
								<button class="btn btn-primary col-sm-12">
									Add a new playlist from deezer
								</button>
								</a>
							</h4>

						</div>
					</div>
					<!-- Card -->

				</div>

				{% for playlist in playlists %}
					{{ macroplaylist.playlistcard(playlist.id,playlist.playlist_title,playlist.playlist_picture,playlist.playlist_link) }}
				{% endfor %}


			</div>


		</div>

	{% endblock %}

	{% block javascripts %}
		<script src="/js/home.js" type="text/javascript"></script>
	{% endblock %}
