{% extends "main.twig" %}
{% import "macros/home.twig" as macrohome %}
{% import "macros/macrosplaylist.twig" as macroplaylist %}
{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}

{% block interactivemenus %}
	{{include('interactivemenus/loadfile.twig')}}
{% endblock %}
{% block content %}

	<div id="main_page" class="container-fluid row">

		<div class="col-sm-3">

			<div class="sidenavbar" linkstyle="btn btn-primary">
				<ul class="">
					<div class="input-group flex-nowrap"></div>
				</ul>
				<ul class="sidenavbarlist"></ul>

			</div>
		</div>
		<div class="col-sm-9">
			<div id="playlists" class="row">
				{% for playlist in dynamicplayists.data %}
					{{ macroplaylist.playlistcard(playlist.id,playlist.title,playlist.picture_xl,playlist.nb_tracks) }}
				{% endfor %}
				
			</div>


		</div>

	{% endblock %}

	{% block javascripts %}
		<script type="text/javascript">
			$(document).ready(function () {
SideNavBar.init();
});
		</script>
		<script src="/js/home.js" type="text/javascript"></script>
	{% endblock %}
