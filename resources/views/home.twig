{% extends "main.twig" %}
{% import "macros/home.twig" as macrohome %}
{% import "macros/macrosplaylist.twig" as macroplaylist %}
{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}

{% block interactivemenus %}
{% endblock %}
{% block content %}

	<div id="main_page" class="container-fluid row">

		
		<div class="col-sm-12">
			<div id="playlists" class="row">
				{% for playlist in dynamicplaylists.data %}
					{{ macroplaylist.playlistcard(playlist.id,playlist.title,playlist.picture_xl,playlist.nb_tracks,playlist.link) }}
				{% endfor %}

				{% for playlist in staticplaylists %}
					{{ macroplaylist.playlistcard(playlist.id,playlist.title,playlist.picture_xl,playlist.nb_tracks,playlist.link) }}
				{% endfor %}
				
			</div>


		</div>

	{% endblock %}

	{% block javascripts %}
		<script src="/js/home.js" type="text/javascript"></script>
	{% endblock %}
