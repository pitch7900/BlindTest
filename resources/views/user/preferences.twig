{% extends "main.twig" %}
{% import "macros/home.twig" as macrohome %}
{% import "macros/macrosplaylist.twig" as macroplaylist %}
{% block menu %}
	{{ include('menu.twig') }}
{% endblock %}

{% block interactivemenus %}{% endblock %}
{% block content %}

	<div id="main_page" class="container-fluid row">


		<div class="col-sm-12">

			<form method="post">
				<div class="form-group row">
					<label for="email" class="col-sm-2 col-form-label">Email</label>
					<div class="col-sm-10">
						<input type="text" name="email" readonly class="form-control-plaintext" id="email" value="{{email}}">
					</div>
				</div>

				<div class="form-group row">
					<label for="nickname" class="col-sm-2 col-form-label">NickName</label>
					<div class="col-sm-10">
						<input type="text" name="nickname" class="form-control" id="nickname" value="{{nickname}}">
					</div>
				</div>
				<button class="btn btn-lg btn-primary btn-block" type="submit">Send change</button>
			</form>

			{% if user.darktheme %}
				{% set check_darkmode="checked" %}
			{% else %}
				{% set check_darkmode="" %}
			{% endif %}
			<br>
			<input type="checkbox" class="btn-check" id="darkmode" autocomplete="off" onchange="change_user_darkmode();" {{check_darkmode}}>
			<label class="btn btn-outline-success" for="darkmode">Dark Theme</label>

{% endblock %}

{% block javascripts %}
	<script src="/js/home.js" type="text/javascript"></script>
{% endblock %}
